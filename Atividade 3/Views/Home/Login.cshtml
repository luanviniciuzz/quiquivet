@model Funcionario
@{
    ViewData["Title"] = "Login";
}
<body style="background-color: rgb(133, 184, 181)">
    <h2> Login</h2>
        <div class="container">
        <div class="col-sm-4">

        <p id="Mensagem">@ViewBag.Mensagem</p>

        <form asp-action="Login" method="POST">     
            <div class="form-group">
            <label asp-for="login" for="inputPassword" class="col-sm-2 col-form-label">Login: </label>
            <div class="col-sm-10">
              <input asp-for="login" class="form-control" id="inputPassword">
            </div>
            </div>
            <div class="form-group">
            <label asp-for="senha" for="inputPassword" class="col-sm-2 col-form-label">Senha: </label>
            <div class="col-sm-10">
              <input asp-for="senha" type="password" class="form-control" id="inputPassword">
            </div>
            </div>   
            <p>
                <input type="submit" value="Entrar" />
            </p>
        </form>
        </div>
    </div>
</body>