@model Funcionario
@{
    ViewData["Title"] = "Cadastro de Funcionário";
}
<body style="background-color: rgb(133, 184, 181)">
<h2>Cadastro de Funcionários</h2>
<p id="pMensagem">@ViewBag.Mensagem</p>
<div class="container">
    <div class="col-sm-8">
    <form asp-action="CadastroFuncionario" method="POST">
    <div class="form-group">
     <label asp-for="nomeFuncionario" for="inputNameF" class="col-sm-2 col-form-label">Nome: </label>
    <div class="col-sm-10">
     <input asp-for="nomeFuncionario" class="form-control" id="inputNameF">
    </div>
    </div>
    <div class="form-group">
     <label asp-for="rgFuncionario" for="inputRgF" class="col-sm-2 col-form-label">RG:</label>
    <div class="col-sm-10">
     <input asp-for="rgFuncionario" class="form-control" id="inputRgF">
    </div>
    </div>    
    <div class="form-group">
     <label asp-for="cpfFuncionario" for="inputCPFF" class="col-sm-2 col-form-label">CPF:</label>
    <div class="col-sm-10">
     <input asp-for="cpfFuncionario" class="form-control" id="inputCPFF">
    </div>
    </div>    
    <div class="form-group">
     <label asp-for="login" for="inputLOGIN" class="col-sm-2 col-form-label">Login:</label>
    <div class="col-sm-10">
     <input asp-for="login" class="form-control" id="inputLOGIN">
    </div>
    </div>
    <div class="form-group">
     <label asp-for="senha" for="inputSENHA" class="col-sm-2 col-form-label">Senha:</label>
    <div class="col-sm-10">
     <input asp-for="senha" class="form-control" id="inputSENHA">
    </div>
    </div>    
    <p>
        <input type="submit" value="Cadastrar" />
    </p>
</form>
    </div>
    <a class="text-body" href="/Home/ConsultaClinica" style="text-decoration:none">Voltar</a>
</div>
<br>
</body>
